<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DiadePesca" parent="Theme.Material3.Light.NoActionBar">
        <!-- Desactivar el modo oscuro -->
        <item name="android:forceDarkAllowed" tools:targetApi="29">false</item>
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.DiadePesca" parent="Base.Theme.DiadePesca" />

    <style name="Theme.DiadePesca.AppWidgetContainerParent" parent="@android:style/Theme.Light">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!-- Radius of the inner view's bound of widgets to make the rounded corners. -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.DiadePesca.AppWidgetContainer" parent="Theme.DiadePesca.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>
</resources>
