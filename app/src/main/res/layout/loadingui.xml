<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/fondo" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginTop="65dp"
        android:text="¡Bienvenido!"
        android:letterSpacing="0.02"
        android:textSize="60dp"
        android:textColor="@color/whiteBlack"
        android:textStyle="bold"
        android:fontFamily="@font/robotoregular"
        ></com.google.android.material.textview.MaterialTextView>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="145dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Obtén información sobre los ríos y el clima para tu jornada de pesca."
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="@color/whiteBlack"
        android:textStyle="bold"
        android:fontFamily="@font/robotoregular"
        ></com.google.android.material.textview.MaterialTextView>

    <Button
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:id="@+id/comenzaraventura"
        android:layout_gravity="bottom|center"
        android:textSize="20dp"
        android:layout_marginBottom="170dp"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:text="Comenzar Aventura"
        android:textAlignment="center"
        android:textColor="@color/whiteBlack"
        android:backgroundTint="@color/blue"
        android:textAppearance="@font/robotoregular"
        />

    <Button
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:id="@+id/ingresar"
        android:layout_gravity="bottom|center"
        android:textSize="20dp"
        android:layout_marginBottom="100dp"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:text="Ingresar"
        android:textAlignment="center"
        android:textColor="@color/whiteBlack"
        android:backgroundTint="@color/blueTransparent"
        android:textAppearance="@font/robotoregular"
        />

    <!-- Bottom sheets -->
    <FrameLayout
        android:id="@+id/standard_bottom_sheet"
        style="@style/Widget.Material3.BottomSheet"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:behavior_peekHeight="25dp"
        app:behavior_hideable="false"
        >

        <com.google.android.material.bottomsheet.BottomSheetDragHandleView
            android:id="@+id/drag_handle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/register_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_gravity="left|top"
            android:layout_marginLeft="52dp"

            ></TextView>

        <!-- Nombre -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/name"
            android:layout_gravity="center|top"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:hint="Name">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Email -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/email"
            android:layout_gravity="center|top"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="145dp"
            android:hint="Email">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Password -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password"
            android:layout_gravity="center|top"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="220dp"
            android:hint="Password"
            app:endIconMode="password_toggle"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Button sign up -->
        <Button
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:id="@+id/signup_btn"
            android:layout_gravity="bottom|center"
            android:textSize="20dp"
            android:layout_marginBottom="150dp"
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:text="Sign up"
            android:textAlignment="center"
            android:textColor="@color/whiteBlack"
            android:backgroundTint="@color/blue"
            android:textAppearance="@font/robotoregular"
            />

        <TextView
            android:id="@+id/socials"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="or sign up with"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_marginBottom="115dp"
            android:layout_gravity="center|bottom"
            android:textColor="@color/greyBlack"
            ></TextView>

        <!-- gmail -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/signupGmail"
            android:layout_marginRight="40dp"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="30dp"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@drawable/gmail_icon"
            />

        <!-- Facebook -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/signupFacebook"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="30dp"
            android:layout_gravity="left|bottom"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:scaleType="centerInside"
            android:clickable="true"
            android:src="@drawable/facebook_icon"
            />
    </FrameLayout>


    <!-- Bottom sheets LOGIN -->
    <FrameLayout
        android:id="@+id/login_bottom_sheets"
        style="@style/Widget.Material3.BottomSheet"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:behavior_peekHeight="25dp"
        app:behavior_hideable="false"
        android:visibility="invisible">

        <com.google.android.material.bottomsheet.BottomSheetDragHandleView
            android:id="@+id/drag_handle_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/login_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_gravity="left|top"
            android:layout_marginLeft="52dp"

            ></TextView>

        <!-- Email -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/email_login"
            android:layout_gravity="center|top"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:hint="Email">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Password -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password_login"
            android:layout_gravity="center|top"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:hint="Password"
            app:endIconMode="password_toggle">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Button Login-->
        <Button
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:id="@+id/login_btn"
            android:layout_gravity="bottom|center"
            android:textSize="20dp"
            android:layout_marginBottom="130dp"
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:text="Login"
            android:textAlignment="center"
            android:textColor="@color/whiteBlack"
            android:backgroundTint="@color/blue"
            android:textAppearance="@font/robotoregular"
            />

        <TextView
            android:id="@+id/socials_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="or login with"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_marginBottom="105dp"
            android:layout_gravity="center|bottom"
            android:textColor="@color/greyBlack"
            ></TextView>

        <!-- gmail -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/loginGmail"
            android:layout_marginRight="40dp"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="30dp"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@drawable/gmail_icon"
            />

        <!-- Facebook -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/loginFacebook"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="30dp"
            android:layout_gravity="left|bottom"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:scaleType="centerInside"
            android:clickable="true"
            android:src="@drawable/facebook_icon"
            />
    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
