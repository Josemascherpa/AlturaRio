<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/fondo" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginTop="80dp"
        android:text="¡Bienvenido!"
        android:letterSpacing="0.02"
        android:textSize="60dp"
        android:textColor="@color/whiteBlack"
        android:textStyle="bold"
        android:fontFamily="@font/robotoregular"
        ></com.google.android.material.textview.MaterialTextView>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Obtén información sobre los ríos y el clima para tu jornada de pesca."
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="@color/whiteBlack"
        android:textStyle="bold"
        android:fontFamily="@font/robotoregular"
        ></com.google.android.material.textview.MaterialTextView>

    <Button
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:id="@+id/comenzaraventura"
        android:layout_gravity="bottom|center"
        android:textSize="20dp"
        android:layout_marginBottom="80dp"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:text="Comenzar Aventura"
        android:textAlignment="center"
        android:textColor="@color/whiteBlack"
        android:backgroundTint="@color/blue"
        android:textAppearance="@font/robotoregular"
        />



    <!-- Bottom sheets -->
    <FrameLayout
        android:id="@+id/standard_bottom_sheet"
        style="@style/Widget.Material3.BottomSheet"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:behavior_peekHeight="25dp"
        app:behavior_hideable="false"
        >

        <com.google.android.material.bottomsheet.BottomSheetDragHandleView
            android:id="@+id/drag_handle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/register_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up with"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_gravity="center|top"
            ></TextView>

        <!-- gmail -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/signupGmail"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:clickable="true"
            android:scaleType="centerInside"
            android:src="@drawable/gmail_icon"
            android:background="@color/grey"
            app:shapeAppearanceOverlay="@style/roundedCorners"
            />
    </FrameLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
