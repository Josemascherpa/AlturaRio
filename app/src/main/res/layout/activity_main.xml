<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#C9D7DD"
    >
    <TextView
        android:id="@+id/titleApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Altura Rio Parana en Santa Fe"
        android:textSize="15dp"
        android:textColor="@color/colorTitles"
        android:textStyle="bold"
        android:fontFamily="@font/lemonmilkbold"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:autoSizeTextType="uniform"
        android:maxLines="1"
        />

    <TextView
        android:id="@+id/tv_ubicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ubicacion: "
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="@color/black"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintVertical_bias="0.03"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleApp"
        />

    <TextView
        android:id="@+id/ubicacion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintVertical_bias="0.03"
        app:layout_constraintStart_toEndOf="@id/tv_ubicacion"
        app:layout_constraintTop_toBottomOf="@+id/titleApp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:autoSizeTextType="uniform"
        />

    <TextView
        android:id="@+id/tv_altura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Altura: "
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.065"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_ubicacion"
        app:layout_constraintVertical_bias="0.03" />

    <TextView
        android:id="@+id/altura"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        android:text="asdfasdfasdfsadf"
        app:layout_constraintStart_toEndOf="@+id/tv_altura"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ubicacion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.03"
        android:autoSizeTextType="uniform"
        />
    <TextView
        android:id="@+id/tv_variacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Variacion: "
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_altura"
        app:layout_constraintHorizontal_bias="0.068"
        app:layout_constraintVertical_bias="0.03" />
    <TextView
        android:id="@+id/variacion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="@color/black"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintVertical_bias="0.03"
        app:layout_constraintStart_toEndOf="@id/tv_variacion"
        app:layout_constraintTop_toBottomOf="@+id/altura"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:autoSizeTextType="uniform"
        />
    <TextView
        android:id="@+id/tv_ultimaActualizacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ultima Actualizacion: "
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.088"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_variacion"
        app:layout_constraintVertical_bias="0.03"/>

    <TextView
        android:id="@+id/ultimaActua"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintVertical_bias="0.03"
        app:layout_constraintStart_toEndOf="@id/tv_ultimaActualizacion"
        app:layout_constraintTop_toBottomOf="@+id/variacion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:autoSizeTextType="uniform"
        android:maxLines="1"/>
    <TextView
        android:id="@+id/tv_estado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estado:"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.065"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_ultimaActualizacion"
        app:layout_constraintVertical_bias="0.03"/>
    <TextView
        android:id="@+id/estado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintVertical_bias="0.03"
        app:layout_constraintStart_toEndOf="@id/tv_estado"
        app:layout_constraintTop_toBottomOf="@+id/ultimaActua"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:autoSizeTextType="uniform"/>

    <TextView
        android:id="@+id/tv_alturaAnterior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Altura Anterior:"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.076"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_estado"
        app:layout_constraintVertical_bias="0.03"/>
    <TextView
        android:id="@+id/altAnterior"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintVertical_bias="0.03"
        app:layout_constraintStart_toEndOf="@id/tv_alturaAnterior"
        app:layout_constraintTop_toBottomOf="@+id/estado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:autoSizeTextType="uniform"/>
    <TextView
        android:id="@+id/tv_fechaAnterior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha Anterior:"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.075"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_alturaAnterior"
        app:layout_constraintVertical_bias="0.03"/>
    <TextView
        android:id="@+id/fechaAnterior"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintVertical_bias="0.03"
        app:layout_constraintStart_toEndOf="@id/tv_fechaAnterior"
        app:layout_constraintTop_toBottomOf="@+id/altAnterior"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:autoSizeTextType="uniform"       />
    <TextView
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Version 1.0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleApp"
        app:layout_constraintVertical_bias="0.98"

        />




</androidx.constraintlayout.widget.ConstraintLayout>


